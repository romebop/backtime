{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",

    /* linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "composite": true,

    /* path aliases for monorepo */
    "baseUrl": ".",
    "paths": {
      "@backtime/types": ["./packages/types/dist"]
    }
  },
  "references": [
    { "path": "./apps/server" },
    { "path": "./apps/client" },
    { "path": "./packages/types" }
  ]
}
